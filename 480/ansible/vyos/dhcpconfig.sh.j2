#!/bin/vbash
source /opt/vyatta/etc/functions/script-template
configure
set service dhcp-server shared-network-name BLUE7 authoritative 
set service dhcp-server global-parameters "local-address 10.0.5.2;" 
set service dhcp-server shared-network-name BLUE7 subnet 10.0.5.0/24
set service dhcp-server shared-network-name BLUE7 subnet 10.0.5.0/24 default-route 10.0.5.2
set service dhcp-server shared-network-name BLUE7 subnet 10.0.5.0/24 dns-server 10.0.5.5
set service dhcp-server shared-network-name BLUE7 subnet 10.0.5.0/24 domain-name blue7.local
set service dhcp-server shared-network-name BLUE7 subnet 10.0.5.0/24 lease 86400
set service dhcp-server shared-network-name BLUE7 subnet 10.0.5.0/24 range BLUE7-POOL start 10.0.5.75
set service dhcp-server shared-network-name BLUE7 subnet 10.0.5.0/24 range BLUE7-POOL stop 10.0.5.125
commit
save